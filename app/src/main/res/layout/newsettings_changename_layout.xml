<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addHWlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/change_name_back_button"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="end|top"
            android:background="@color/fui_transparent"
            android:paddingTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/red_cancel_button" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addHomeworkText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:shadowColor="@color/white"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="Change Name"
            android:textColor="#000000"
            android:textSize="34sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/changeNameText"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/lora"
            android:includeFontPadding="false"
            android:paddingLeft="30dp"
            android:paddingTop="22dp"
            android:text="Change Name:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/change_name_Text"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edit_text"
            android:fontFamily="@font/average"
            android:hint="What is your new name?"
            android:includeFontPadding="false"
            android:padding="12dp" />

        <TextView
            android:id="@+id/confirmNameChangeText"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/lora"
            android:includeFontPadding="false"
            android:paddingLeft="30dp"
            android:paddingTop="22dp"
            android:text="Confirm Name:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/confirm_name_text"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edit_text"
            android:hint="Confirm your new name"
            android:fontFamily="@font/average"
            android:padding="12dp" />

        <Button
            android:id="@+id/change_name_save_button"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner_black"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Save Changes"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>