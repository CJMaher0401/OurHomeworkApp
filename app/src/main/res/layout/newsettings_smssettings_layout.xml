<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addHWlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/change_number_back_button"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="end|top"
            android:background="@color/fui_transparent"
            android:paddingTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/red_cancel_button" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/changePhoneNumText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:shadowColor="@color/white"
            android:shadowDx="-1"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="Change Phone #"
            android:textColor="#000000"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lora"
                android:text="Only Send SMS when homework is added" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lora"
                android:text="Only Send SMS when homework is added" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="391dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lora"
                android:text="Only Send SMS when homework is added" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>