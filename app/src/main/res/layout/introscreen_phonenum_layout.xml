<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background">

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Welcome to OurHomework!"
        android:textColor="@color/primaryTextColor"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/namePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Help inform your parents! What are their phone numbers"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/momPhoneInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namePrompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Mom's phone number"
        android:padding="12dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/dadPhoneInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namePrompt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="102dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="Dad's phone number"
        android:padding="12dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_below="@id/nameInput"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="64dp"
        android:background="@color/primaryButtonColor"
        android:padding="12dp"
        android:text="Next"
        android:textColor="@color/buttonTextColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/active_dot" />
    </LinearLayout>

</RelativeLayout>