<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background">

    <TextView
        android:id="@+id/welcomePhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Who do you want to inform about your school work?"
        android:textColor="@color/primaryTextColor"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/phoneNumInput"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomePhoneNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/average"
        android:hint="Parent/Guardians Phone Number"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phoneNumPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumInput"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="NOTE: You can change your phone number at any point in the settings, You can also customize when SMS messages are sent as well!"
        android:textAlignment="center"
        android:textColor="#838383"
        android:textSize="18sp" />

    <Button
        android:id="@+id/welcomeNextButton"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rounded_corners"
        android:padding="12dp"
        android:text="Next"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/inactive_dot" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/active_dot" />
    </LinearLayout>
</RelativeLayout>