<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/background_light"
    android:orientation="vertical">

    <!-- This is the linear layout that contains the buttons, I needed to add a view to
    separate the buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heyprofiletext"
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:background="@color/fui_transparent"
            android:gravity="center"
            android:text="Hey Test Profile"
            android:textAlignment="center"
            android:textSize="24sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <EditText
        android:id="@+id/editFirstNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:paddingBottom="15dp" />

    <EditText
        android:id="@+id/editLastNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:paddingBottom="15dp" />

    <EditText
        android:id="@+id/editEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Email"
        android:paddingBottom="15dp" />

    <TextView
        android:id="@+id/parentsNumText"
        android:layout_width="274dp"
        android:layout_height="85dp"
        android:background="@color/fui_transparent"
        android:gravity="center"
        android:text="Parents Phone Number:"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editParentPhoneNumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Parents Phone Number"
        android:paddingBottom="15dp" />


    <Switch
        android:id="@+id/notificationsSwitch"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="  Notifications On/Off:"
        android:textSize="20sp" />

    <Button
        android:id="@+id/saveChangesButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corners"
        android:text="Save Changes" />

    <Button
        android:id="@+id/custoimizeButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corners"
        android:text="Customize OurHomework" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="2dp"
        android:background="@drawable/rounded_corners"
        android:text="Sign Out" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/profileHomeButton"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:text="Home"

            app:srcCompat="@android:drawable/ic_menu_revert"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/profileMyHWButton"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:text="Your HW"

            app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/profileMyProfileButton"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:text="Your Profile"

            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

</LinearLayout>